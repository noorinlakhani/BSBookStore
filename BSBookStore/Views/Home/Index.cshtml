@{
  ViewData["Title"] = "Home Page";
}

@model IEnumerable<BSBookStore.Models.Book>

<div class="row pb-3 backgroundWhite">

  @foreach (var book in Model)
  {
    <div class="col-lg-3 col-md-6">
      <div class="row p-2">
        <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
          <div class="card" style="border:0px;">

            <div class="pl-1">
              <p class="card-title h5"><b style="color:#2c3e50">@book.Title</b></p>
              <p class="card-title text-primary">In Category: <b>@book.Category.Name</b></p>
            </div>
            <div style="padding-left:5px;">
              <p>List Price: <b class="">$@book.Price.ToString("0.00")</b></p>
            </div>

          </div>
          <div>
            <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@book.Id">Details</a>
          </div>
        </div>
      </div>
    </div>
  }

</div>


