@{
}
@model BSBookStore.Models.Category
<form method="post" asp-action="Create">
  <div class="border p-3">
    <div class="form-group row">
      <h2 class="text-info pl-3"> Add Category </h2>
    </div>
    <div class="row">
      <div class="col-8">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-4">
        <label asp-for="Name"></label>
      </div>

      <div class="col-8">
        <input asp-for="Name">
      </div>
    </div>
    <div class="form-group row">
      <div class="col-3 offset-3">
        <input type="submit" value="Create" class="btn btn-success form-control" />
      </div>
      <div class="col-3">
        <a asp-action="Index" class="btn btn-primary form-control">Back </a>
      </div>
    </div>
  </div>

</form>