@{
}
@model IEnumerable<Book>
<div class="container p-3">
  <div class=" row p-4">
    <div class="col-6">
      <h2 class="text-primary"> Book List</h2>
    </div>
    <div class="col-6 text-right">
      <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i> Create a new Book</a>
    </div>
  </div>
  <br />
  <br />
  @if (Model.Count() > 0)
  {
    <table class="table-bordered table-striped" style="width:100%">
      <thead>
        <tr>
          <th width="30%"> Title </th>
          <th width="30%"> Author </th>
          <th width="30%"> Price </th>
          <th width="30%"> Category Name </th>
          <th width="30%">  </th>
        </tr>
      </thead>
      <tbody>
        @foreach (var book in Model)
        {
        <tr>
          <td> @book.Title </td>
          <td> @book.Author </td>
          <td> @book.Price </td>
          <td> @book.Category.Name </td>
          <td class="text-center">
            <div class="btn-group" role="group">
              <a class="btn btn-primary" asp-action="Edit" asp-route-id="@book.Id"> Edit</a>
              <a class="btn btn-danger" asp-action="Delete" asp-route-id="@book.Id"> Delete</a>
            </div>
          </td>
        </tr>
        }

      </tbody>
    </table>
  }
  else
  {
    <p> No Books available</p>
  }
</div>