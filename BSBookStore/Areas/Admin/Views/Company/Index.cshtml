@{
}
@model IEnumerable<Company>
<div class="container p-3">
  <div class=" row p-4">
    <div class="col-6">
      <h2 class="text-primary"> Company List</h2>
    </div>
    <div class="col-6 text-right">
      <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i> Create a new Company</a>
    </div>
  </div>
  <br />
  <br />
  @if(Model.Count() >0)
  {
    <table class="table-bordered table-striped" style="width:100%">
      <thead>
        <tr>
          <th width="50%"> Name </th>
          <th width="50%"> State </th>
          <th width="50%"> City </th>
          <th width="50%"> IsAuthenticated </th>
          <th width="50%">  </th>
        </tr>
      </thead>
      <tbody>
        @foreach (var company in Model)
        {
        <tr>
          <td> @company.Name </td>
          <td> @company.State </td>
          <td> @company.City </td>
          <td> @company.IsAuthenticated </td>
          <td class="text-center">
            <div class="btn-group" role="group">
              <a class="btn btn-primary" asp-action="Edit" asp-route-id="@company.Id"> Edit</a>
              <a class="btn btn-danger" asp-action="Delete" asp-route-id="@company.Id"> Delete</a>
            </div>
          </td>
        </tr>
        }

      </tbody>
    </table>
  }
  else
      {
        <p> No company available</p>
      }
</div>
