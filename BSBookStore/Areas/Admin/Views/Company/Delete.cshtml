@{
}
@model BSBookStore.Models.Company
<form method="post" asp-action="Delete">
  <div class="border p-3">
    <div class="form-group row">
      <h2 class="text-info pl-3"> Delete Company </h2>
    </div>
    <div class="row">
      <div class="col-8">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-4">
        <label asp-for="Name"></label>
      </div>

      <div class="col-8">
        <input asp-for="Name" disabled />
      </div>
    </div>
    <div class="form-group row">
      <div class="col-4">
        <label asp-for="City"></label>
      </div>

      <div class="col-8">
        <input asp-for="City">
      </div>
    </div>

    <div class="form-group row">
      <div class="col-4">
        <label asp-for="State"></label>
      </div>

      <div class="col-8">
        <input asp-for="State">
      </div>
    </div>

    <div class="form-group row">
      <div class="col-4">
        <label asp-for="IsAuthenticated"></label>
      </div>

      <div class="col-8">
        <input asp-for="IsAuthenticated">
      </div>
    </div>
    <div class="form-group row">
      <div class="col-3 offset-3">
        <input type="submit" value="Delete" class="btn btn-success form-control" />
      </div>
      <div class="col-3">
        <a asp-action="Index" class="btn btn-primary form-control">Back </a>
      </div>
    </div>
  </div>

</form>