@{
}
@using BSBookStore.Models
@model IEnumerable<ApplicationUser>
<div class="container p-3">
  <div class=" row p-4">
    <div class="col-6">
      <h2 class="text-primary"> User List</h2>
    </div>
    <div class="col-6 text-right">
      <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-plus"></i> Create a new User</a>
    </div>
  </div>
  <br />
  <br />
  @if (Model.Count() > 0)
  {
    <table class="table-bordered table-striped" style="width:100%">
      <thead>
        <tr>
          <th width="20%"> Name </th>
          <th width="20%"> Email </th>
          <th width="20%"> Ph no </th>
          <th width="20%"> Compnay </th>
          <th width="20%"> Role </th>
          
        </tr>
      </thead>
      <tbody>
        @foreach (var user in Model)
        {
        <tr>
          <td> @user.Name </td>
          <td> @user.Email </td>
          <td> @user.PhoneNumber </td>
          <td> @user.Company.Name </td>
          <td> @user.Role</td>
          
        </tr>
        }

      </tbody>
    </table>
  }
  else
  {
    <p> No user available</p>
  }
</div>